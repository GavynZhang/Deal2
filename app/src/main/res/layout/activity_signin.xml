<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp">

    <ImageView
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:background="@color/colorAccent"
        android:id="@+id/name_img"/>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_toRightOf="@+id/name_img"
        android:layout_alignBottom="@+id/name_img"
        android:id="@+id/name_float_edit">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="16dp"
            android:hint="this is the name"
            android:id="@+id/name_edit"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <ImageView
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:background="@color/colorAccent"
        android:layout_marginTop="12dp"
        android:id="@+id/password_img"
        android:layout_below="@+id/name_img"/>
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/password_img"
        android:layout_alignBottom="@+id/password_img"
        android:layout_below="@+id/name_float_edit"
        android:id="@+id/password_float_edit">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textSize="16dp"
            android:hint="this is the password"
            android:id="@+id/password_edit"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_img"
        android:layout_marginTop="12dp"
        android:text="Sign up"
        android:id="@+id/signUp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_img"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/signUp"
        android:text="Sign in"
        android:id="@+id/signIn"/>

</RelativeLayout>
