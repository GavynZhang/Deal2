<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/head"
            android:id="@+id/img_take_out_item"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_take_out_item"
            android:layout_toRightOf="@+id/img_take_out_item"
            android:layout_marginLeft="26dp"
            android:text="目的地:"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/destinationHint_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_take_out_item"
            android:layout_toRightOf="@+id/destinationHint_take_out_order"
            android:layout_marginLeft="6dp"
            android:text="27栋502"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/destination_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_take_out_item"
            android:layout_below="@+id/destinationHint_take_out_order"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="6dp"
            android:text="渝州铁板烧"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/business_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/business_take_out_order"
            android:layout_below="@+id/destinationHint_take_out_order"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="-"
            android:textColor="@color/black"
            android:id="@+id/line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line"
            android:layout_below="@+id/destinationHint_take_out_order"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="重邮老校门对面堕落街13号"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/address_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_take_out_item"
            android:layout_below="@+id/address_take_out_order"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="6dp"
            android:text="运费:"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/moneyHint_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/moneyHint_take_out_order"
            android:layout_below="@+id/address_take_out_order"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="20"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/money_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/money_take_out_order"
            android:layout_below="@+id/address_take_out_order"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:text="份数:"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/amountHint_take_out_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/amountHint_take_out_order"
            android:layout_below="@+id/address_take_out_order"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="4"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/amount_take_out_order"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/img_take_out_item"
            android:layout_below="@+id/address_take_out_order"
            android:id="@+id/capture"
            android:text="抢 单"
            android:layout_toRightOf="@+id/amount_take_out_order"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:background="@color/yellow"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
